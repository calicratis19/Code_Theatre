{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C++: g++ build active file",
        "type": "shell",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}/a.out"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  